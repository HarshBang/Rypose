            <!-- Centered Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help and Information"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="18dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Automated Angle of Repose Measurement Using Image Processing"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#48CAE4"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This application is designed to measure the angle of repose of pharmaceutical powders using image processing. It classifies materials based on predefined stability criteria, replacing manual measurement techniques."
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:paddingBottom="25dp" />

            <!-- Angle Calculation -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angle Calculation"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#48CAE4"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The app calculates the angle using the formula (where two slopes meet):\n\ncos(θ) = (a² + b² – c²) / 2ab"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:paddingBottom="25dp" />

            <!-- Classification Logic -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classification Logic"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#48CAE4"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" • Excellent: 25° - 30°\n
• Good: 31° - 35°\n
• Fair: 36° - 40°\n
• Passable: 41° - 45°\n
• Poor: 46° - 55°\n
• Very Poor: 56° - 65°\n
• Poorest: More than 66°\n
• Angle Too Small: Less than 25°"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:paddingBottom="25dp" />

